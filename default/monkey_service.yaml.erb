apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: moneky-service
spec:
  replicas: <%= @replicaCount %>
  template:
    metadata:
      labels:
        app: web
    spec:
      containers:
        - name: front-end
          image: nginx
          ports:
            - containerPort: 80
        - name: rss-reader
          image: nickchase/rss-php-nginx:<%= @imageTag %>
          ports:
            - containerPort: 88
